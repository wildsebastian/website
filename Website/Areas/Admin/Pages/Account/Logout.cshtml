@page
@model Website.Areas.Admin.Pages.Account.LogoutModel
@{
    ViewData["Title"] = "Log out";
}

<div>
    <h1 class="text-3xl font-bold tracking-tight text-gray-900 mb-4">@ViewData["Title"]</h1>
    @{
        if (User.Identity?.IsAuthenticated ?? false)
        {
            <form method="post">
                <button type="submit" class="rounded-md bg-indigo-600 px-2.5 py-1.5 text-sm font-semibold text-white shadow-xs hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600">Click here to Logout</button>
            </form>
        }
    }
</div>
