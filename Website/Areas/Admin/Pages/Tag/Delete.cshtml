@page
@model Website.Areas.Admin.Pages.Tag.DeleteModel

@{
    ViewData["Title"] = "Tag - Delete";
}

<div>
  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
    <div class="sm:flex sm:items-center">
      <div class="sm:flex-auto">
        <h1 class="text-3xl font-bold tracking-tight text-gray-900">@ViewData["Title"]</h1>
      </div>
    </div>
  </div>
  <div class="mt-8 rounded-md bg-red-50 p-4 mx-4 sm:mx-6 lg:mx-8">
    <div class="flex">
      <div class="shrink-0">
        <svg class="size-5 text-red-400" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true" data-slot="icon">
          <path fill-rule="evenodd" d="M10 18a8 8 0 1 0 0-16 8 8 0 0 0 0 16ZM8.28 7.22a.75.75 0 0 0-1.06 1.06L8.94 10l-1.72 1.72a.75.75 0 1 0 1.06 1.06L10 11.06l1.72 1.72a.75.75 0 1 0 1.06-1.06L11.06 10l1.72-1.72a.75.75 0 0 0-1.06-1.06L10 8.94 8.28 7.22Z" clip-rule="evenodd" />
        </svg>
      </div>
      <div class="ml-3">
        <h3 class="text-sm font-medium text-red-800">Are you sure you want to delete this tag?</h3>
      </div>
    </div>
  </div>
  <div class="mt-8 flow-root overflow-hidden">
    <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
      <table class="w-full text-left">
        <thead class="bg-white">
        <tr class="border-b border-gray-200">
          <th scope="col" class="relative isolate py-3.5 pr-3 text-left text-sm font-semibold text-gray-900">
            @Html.DisplayNameFor(model => model.Tag.Name)
          </th>
        </tr>
        </thead>
        <tbody>
        <tr class="hover:bg-gray-100 border-b border-gray-200">
          <td class="relative py-4 pr-3 text-sm font-medium text-gray-900">
            @Html.DisplayFor(model => model.Tag.Name)
          </td>
        </tr>
        </tbody>
      </table>
    </div>
  </div>
  <div class="flex flex-row mt-8 px-4 sm:px-6 lg:px-8">
    <form method="post">
      <input type="hidden" asp-for="Tag.Id" />
      <a asp-page="./Index" class="mr-2">Cancel</a>
      <input type="submit" value="Delete" class="rounded-md bg-red-600 px-2.5 py-1.5 text-sm font-semibold text-white shadow-xs hover:bg-red-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-red-600" />
    </form>
  </div>
</div>


