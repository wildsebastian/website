<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8"/>
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>@ViewData["Title"] - wildsebastian.eu</title>
  <link rel="stylesheet" href="~/css/all.min.css" asp-append-version="true"/>
  <link rel="stylesheet" href="~/css/app.css" asp-append-version="true"/>
</head>
<body class="flex flex-col h-screen justify-between">

<header class="container mx-auto max-w-screen-md pr-4 pl-4 mt-4">
  <a href="/">
    <h1 class="text-4xl">Sebastian Wild</h1>
  </a>
</header>

<main class="container mx-auto max-w-screen-md mb-auto mt-8 pr-2 pl-2">
  <div class="flex flex-col">
    @RenderBody()
  </div>
</main>

<footer class="container mx-auto max-w-screen-md pr-4 pl-4 mb-4">
  <a rel="license" href="http://creativecommons.org/licenses/by/4.0/">
    <img alt="Creative Commons License" style="border-width:0" src="https://i.creativecommons.org/l/by/4.0/88x31.png" />
  </a>
</footer>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
