@page
@model IndexModel
@{
  ViewData["Title"] = "Sebastian Wild";
  ViewData["BlogPostCount"] = Model.BlogPosts.Count;
}

<div>
  <h1 class="text-3xl font-semibold">Sebastian Wild</h1>
  <h2 class="text-xl font-semibold mt-2">Software Developer</h2>
  <p class="mt-2">
    I am Sebastian, a software developer from Europe.
    I am interested in how to use formal methods to improve software quality, functional programming,
    as well as scalable software development.
    If you want to hire me, you can contact me via my
    <a href="https://wild-siena.com" class="underline">company website</a>.
  </p>
</div>
<div class="mt-4">
  <div class="flex mt-2">
    <a href="https://github.com/wildsebastian" class="dark:hover:text-gray-400" target="_blank">
      <i class="fab fa-github fa-lg m-2"></i>
    </a>
    <a href="https://gitlab.com/wildsebastian" class="dark:hover:text-gray-400" target="_blank">
      <i class="fab fa-gitlab fa-lg m-2"></i>
    </a>
    <a href="mailto:me@wildsebastian.eu" class="dark:hover:text-gray-400" target="_blank">
      <i class="fas fa-envelope fa-lg m-2"></i>
    </a>
  </div>
</div>

@if (Model.BlogPosts.Count > 0)
{
  <div class="mt-8">
    <h2 class="text-pretty text-2xl font-semibold tracking-tight sm:text-2xl">Articles</h2>
    <div class="flex flex-col mt-4 gap-y-6 border-t border-gray-200">
      @foreach (var post in Model.BlogPosts)
      {
        <article class="flex mt-4 flex-col items-start justify-between">
          <div class="flex items-center text-xs">
            <time datetime="2020-03-16">@Html.DisplayFor(modelItem => post.PublishedAt)</time>
          </div>
          <div class="relative mt-2">
            <a asp-page="/Blog/Index" asp-route-slug="@post.Slug">
              <h3 class="text-lg/6 font-semibold">
                @Html.DisplayFor(modelItem => post.Title)
              </h3>
              <p class="mt-3 text-sm/6">@Html.DisplayFor(modelItem => post.Abstract)</p>
            </a>
          </div>
          <div class="relative mt-2 flex items-center">
            <div class="text-sm/6">
              <p class="font-semibold">
                <span class="absolute inset-0"></span>
                @if (post.Author != null)
                {
                  @Html.DisplayFor(modelItem => post.Author.FirstName)
                  @Html.DisplayFor(modelItem => post.Author.LastName)
                }
              </p>
              @* <p class="text-gray-600">Co-Founder / CTO</p> *@
            </div>
          </div>
        </article>
      }
    </div>
  </div>
}
